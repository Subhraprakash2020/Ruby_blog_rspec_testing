<h2>Register</h2>
<%= form_with model: @user, url: register_path, method: :post do |form| %>
  <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div class="fsub">
    <%= form.submit 'Register' %>
  </div>
<% end %>
